<mvc:View 
controllerName="hogent.hogent.controller.List" 
xmlns:mvc="sap.ui.core.mvc" 
displayBlock="true"
xmlns:core="sap.ui.core"
xmlns:l="sap.ui.layout"
xmlns:f="sap.ui.layout.form"
xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <f:SimpleForm id="SimpleFormChange354"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    title="Add Flights"
                    labelSpanXL="3"
                    labelSpanL="3"
                    labelSpanM="3"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="4"
                    emptySpanL="4"
                    emptySpanM="4"
                    emptySpanS="0"
                    columnsXL="1"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false" >
                    <f:content>
                        <Label id="_IDGenLabel1" text="Airline" />
                        <Input id="formAirline" value="{form>/Carrid}" />
                        <Label id="_IDGenLabel2" text="Flight Number" />
                        <Input id="_IDGenInput1" value="{form>/Connid}">
                        </Input>
                        <Label id="_IDGenLabel3" text="Date" />
                        <DatePicker
                            id="DP1"
                            placeholder="Enter Date"
                            change="handleChange"
                            value="{form>/Fldate}"
                            class="sapUiSmallMarginBottom"/>
                    </f:content>
                    <Button id="save" text="Save" type="Accept" visible="true" press="handleSavePress"/>  
        </f:SimpleForm>
        <Table id="idFlightsTable" inset="false" items="{/flightSet}" growing="true">
            <columns>
                <Column id="_IDGenColumn1" width="12em">
                    <Text id="_IDGenText1" text="Airline"/>
                </Column>
                <Column id="_IDGenColumn2" minScreenWidth="Tablet" demandPopin="true">
                    <Text id="_IDGenText2" text="Flight Number"/>
                </Column>
                <Column id="_IDGenColumn3" minScreenWidth="Desktop" demandPopin="true" hAlign="End">
                    <Text id="_IDGenText3" text="Date"/>
                </Column>
                <Column id="_IDGenColumn4" minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
                    <Text id="_IDGenText4" text="Price"/>
                </Column>
                <Column id="_IDGenColumn5" minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
                    <Text id="_IDGenText10" text="Planetype"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem id="_IDGenColumnListItem1" vAlign="Middle" type="Navigation" press="handleListItemPress">
                    <cells>
                        <Text id="_IDGenText5" text="{Carrid}"/>
                        <Text id="_IDGenText6" text="{Connid}"/>
                        <Text id="_IDGenText7" text="{Fldate}"/>
                        <Text id="_IDGenText8" text="{Price}"/>
                        <Text id="_IDGenText9" text="{Planetype}"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Page>
</mvc:View>
